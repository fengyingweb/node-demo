<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta name="Author" content="fengying">
    <meta name="Keywords" content="">
    <meta name="description" content="">
    <title>风鹰Blog</title>
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/reset.css">
    <link rel="stylesheet" type="text/css" href="css/header.css">
    <link rel="stylesheet" type="text/css" href="css/public.css">
    <link rel="stylesheet" type="text/css" href="css/reg.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div id="app">
    <% include header.ejs %>
    <div class="head-cover"></div>
    <div class="container">
        <div class="row">
        	<div class="col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
        		<h1 class="title text-center">注册</h1>
        		<div class="form-box">
        		  <form class="form-horizontal user-form" action="/reg" method="post" name="userForm">
        		  	<div class="form-group">
        		  		<label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4 text-right" for="user">用户名:</label>
        		  		<span class="pull-left">*</span>
        		  		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-5">
        		  			<input class="form-control" type="text" name="username" id="user" autocomplete="off" required placeholder="请输入用户名..." />
        		  		</div>
        		  		<div class="user-tip col-lg-2 col-md-2 col-sm-2 col-xs-2">
        		  		</div>
        		  		<% if (locals.user) {%>
        		  			<%- locals.user %>
        		  		<% } %>
        		  	</div>
        		  	
        		  	<div class="form-group">
        		  		<label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4 text-right" for="psw">密码:</label>
        		  		<span class="pull-left">*</span>
        		  		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-5">
        		  			<input class="form-control" type="password" name="password" id="psw" autocomplete="off" required placeholder="请输入密码..." />
        		  		</div>
        		  		<div class="psw-tip col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        		  	</div>
        		  	
        		  	<div class="form-group">
        		  		<label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4 text-right" for="confirmPsw">确认密码:</label>
        		  		<span class="pull-left">*</span>
        		  		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-5">
        		  			<input class="form-control" type="password" name="confirmPassWord" id="confirmPsw" autocomplete="off" required placeholder="请再次输入密码..." />
        		  		</div>
        		  		<div class="confirm-tip col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        		  	</div>
        		  	
        		  	<div class="form-group">
        		  		<label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4 text-right" for="email">邮箱:</label>
        		  		<span class="pull-left">*</span>
        		  		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-5">
        		  			<input class="form-control" type="text" name="email" id="email" autocomplete="off" placeholder="请输入邮箱..." />
        		  		</div>
        		  		<div class="email-tip col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        		  	</div>
        		  	
        		  	<div class="form-group text-center">
        		  		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3">
        		  			<a class="submit btn btn-primary" href="javascript:void(0)">注册</a>
        		  		</div>
        		  		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
        		  			<a class="reset btn btn-primary" href="javascript:void(0)">重置</a>
        		  		</div>
        		  	</div>
        		  </form>
        		  <% if (locals.result) {%>
        		  		<%- locals.result %>
        		  <% } %>
        		</div>
        	</div>
        </div>
    </div>
    <% include footer.ejs %>
</div>
<script type="text/javascript" src="js/jquery1.11.3.min.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/reg.js"></script>
</body>
</html>