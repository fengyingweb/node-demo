<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta name="Author" content="fengying">
    <meta name="Keywords" content="">
    <meta name="description" content="">
    <title>风鹰Blog</title>
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/reset.css">
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/public.css">
    <link rel="stylesheet" type="text/css" href="/css/article.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="app">
        <% include ../header.ejs %>
        <div class="head-cover"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 text-center">
                    <h1 class="title">欢迎来到文章发布页面</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2 class="title text-center">文章发布</h2>
                    <form class="form-horizontal articleForm" action="/admin/article" enctype="multipart/form-data" method="post" name="articleForm">
                        <div class="form-group">
                            <label class="control-label col-lg-3 text-right" for="txt-title">文章标题:</label>
                            <div class="col-lg-6">
                                <input class="form-control" type="text" name="title" id="txt-title" required autocomplete="off" placeholder="请输入文章标题...">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-lg-3 text-right" for="txt-tag">文章标签:</label>
                            <div class="col-lg-6">
                                <input class="form-control" type="text" name="tag" id="txt-tag" required autocomplete="off" placeholder="请输入文章标签...">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-lg-3 text-right" for="txt-author">作者:</label>
                            <div class="col-lg-6">
                                <input class="form-control" type="text" name="author" id="txt-author" required autocomplete="off" placeholder="请输入作者...">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-lg-3 text-right" for="txt-content">文章内容:</label>
                            <div class="col-lg-9">
                                <textarea class="form-control" name="content" id="txt-content" rows="10" required autocomplete="off" placeholder="请输入内容..."></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-lg-3 text-righr" for="file">上传图片</label>
                            <div class="col-lg-6">
                                <input class="form-control" type="file" name="img" id="file" placeholder="请上传图片...">
                            </div>
                        </div>

                        <% if (locals.result) {%>
                        <div class="row">
                            <div class="col-lg-4 col-lg-offset-4">
                                <%- locals.result %>
                            </div>
                        </div>
                        <% } %>

                        <div class="row" style="margin-bottom: 50px;">
                            <div class="col-lg-3 col-lg-offset-3">
                                <a class="btn btn-primary submit" href="javascript:;">发布</a>
                            </div>

                            <div class="col-lg-3">
                                <a class="btn btn-primary cancel" href="javascript:;">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% include ../footer.ejs %>
    </div>
    <script type="text/javascript" src="/js/jquery1.11.3.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script>
        (function () {
            // 发布文章
            var txtTitle = $('#txt-title'),
                txtTag = $('#txt-tag'),
                txtAuthor = $('#txt-author'),
                txtContent = $('#txt-content'),
                submit = $('.submit'),
                cancel = $('.cancel'),
                articleForm = $('.articleForm');
            var file = document.getElementById('file');

            submit.click(function () {
                if (txtTitle.val() !== '' && txtAuthor.val() !== '' && txtTag.val() !== '' && txtContent.val() !== '' && file.files.length !== 0) {
                    articleForm.submit();
                } else {
                    alert('发布的标题，标签，作者，内容不能为空!');
                }
            });

            cancel.click(function () {
                txtTitle.val('');
                txtAuthor.val('');
                txtTag.val('');
                txtContent.val('');
                file.files.length = 0;
            });
        })();
    </script>
</body>
</html>